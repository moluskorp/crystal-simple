{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/*",
    "src/shared/**/*",
    "src/main/data/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@*": [
        "./src/*"
      ]
    },
    "composite": true,
    "types": [
      "electron-vite/node"
    ]
  }
}